@{
    Page.Title = "Consulta de pagos";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@section head{

}
@section body{

    <div class="panel panel-default">
        <div class="panel-heading gh-padding-0"></div>
        <div class="panel-body">
            <form class="form-horizontal" id="frm" role="form" action="http://localhost:6585/service/pagar" method="post" autocomplete="off">
                <div class="panel panel-default">
                    <div class="panel-heading">Registrar Pago</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-offset-3 col-xs-12 col-sm-6 col-md-6">
                                <input type="hidden" id="hdnIdTributo" name="hdnIdTributo" value="@ViewBag.Codigo" />
                                <input type="hidden" id="hdnTipo" name="hdnTipo" value="Municipal" />
                                <input type="hidden" id="hdnEstado" name="hdnEstado" value="Pagado" />
                                <fieldset class="form-group row has-feedback">
                                    <label for="txtCode" class="col-xs-12 col-sm-3 col-md-3 control-label">Código/Identificador</label>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <input type="text" class="form-control" id="txtCodigo" placeholder=""  name="txtCodigo" required="required" value="@ViewBag.Codigo">
                                    </div>
                                </fieldset>
                                <fieldset class="form-group row has-feedback">
                                    <label for="txtName" class="col-xs-12 col-sm-3 col-md-3 control-label">Titular</label>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <input type="text" class="form-control" id="txtTitular" name="txtTitular" placeholder="" required="required" value="@ViewBag.Titular">
                                    </div>
                                </fieldset>
                                <fieldset class="form-group row has-feedback">
                                    <label for="txtMonto" class="col-xs-12 col-sm-3 col-md-3 control-label">Monto</label>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <input type="text" class="form-control" id="txtMonto" name="txtMonto" placeholder="" value="@ViewBag.Monto">
                                    </div>
                                </fieldset>
                                <fieldset class="form-group row has-feedback">
                                    <label for="txtFormulationHour" class="col-xs-12 col-sm-3 col-md-3 control-label">Elegir cuenta</label>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <select id="ddlAccount" class="form-control">
                                            <option value="1">Cuenta 1</option>
                                            <option value="2">Cuenta 2</option>
                                        </select>
                                    </div>
                                </fieldset>
                                <fieldset class="form-group row has-feedback">
                                    <label for="txtFormulationHour" class="col-xs-12 col-sm-3 col-md-3 control-label">Token</label>
                                    <div class="col-xs-12 col-sm-9 col-md-9">
                                        <input type="tel" class="form-control" id="txtToken" name="txtToken" placeholder="token" maxlength="6">
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-offset-3 col-xs-12 col-sm-6 col-md-6">
                                <div class="col-sm-6">
                                    <button class="btn">Cancelar</button>
                                </div>
                                <div class="col-sm-6 pull-right">
                                    <button class="btn pull-right">Pagar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="divPopup"></div>
}