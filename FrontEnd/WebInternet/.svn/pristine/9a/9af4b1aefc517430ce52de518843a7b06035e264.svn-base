/*****Scroll Bar*****/

::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background-color: #f1f1f19e;
}

::-webkit-scrollbar-thumb {
    background-color: #c3c5c1;
}

    ::-webkit-scrollbar-thumb:hover {
        background-color: #4974b9;
    }
