

button {
    cursor: pointer !important;
    transition: all 0.6s ease 0s;    
    border: none;
         overflow: visible !important;
    outline: none;
    margin: 0;
    padding: 0;
}
.btn:hover, .btn:focus, .btn.focus {
    color: #fff;
    text-decoration: none;
}
